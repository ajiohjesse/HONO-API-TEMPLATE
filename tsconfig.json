{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": ["ESNext"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "types": ["@cloudflare/vitest-pool-workers"]
  },
  "include": [
    "src/**/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "vitest.config.ts",
    "worker-configuration.d.ts"
  ]
}
