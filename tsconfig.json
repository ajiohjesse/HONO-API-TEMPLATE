{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": ["ESNext"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "@cloudflare/vitest-pool-workers",
      "@cloudflare/workers-types/2023-07-01"
    ],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "vitest.config.ts"
  ]
}
